{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngclient": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": true,
          "inlineStyle": true,
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:resolver": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "baseHref": "en-US"
        },
        "locales": {
          "en-US": {
            "translation": "src/locale/messages.en.xlf",
            "baseHref": "en-US"
          },
          "en-GB": {
            "translation": "src/locale/messages.en_GB.xlf",
            "baseHref": "en-GB"
          },
          "cs": {
            "translation": "src/locale/messages.cs.xlf",
            "baseHref": "cs"
          },
          "da": {
            "translation": "src/locale/messages.da.xlf",
            "baseHref": "da"
          },
          "de": {
            "translation": "src/locale/messages.de.xlf",
            "baseHref": "de"
          },
          "es": {
            "translation": "src/locale/messages.es.xlf",
            "baseHref": "es"
          },
          "fi": {
            "translation": "src/locale/messages.fi.xlf",
            "baseHref": "fi"
          },
          "fr": {
            "translation": "src/locale/messages.fr.xlf",
            "baseHref": "fr"
          },
          "hu": {
            "translation": "src/locale/messages.hu.xlf",
            "baseHref": "hu"
          },
          "it": {
            "translation": "src/locale/messages.it.xlf",
            "baseHref": "it"
          },
          "ja-JP": {
            "translation": "src/locale/messages.ja_JP.xlf",
            "baseHref": "ja-JP"
          },
          "nl-NL": {
            "translation": "src/locale/messages.nl_NL.xlf",
            "baseHref": "nl-NL"
          },
          "pl": {
            "translation": "src/locale/messages.pl.xlf",
            "baseHref": "pl"
          },
          "pt-BR": {
            "translation": "src/locale/messages.pt_BR.xlf",
            "baseHref": "pt-BR"
          },
          "pt": {
            "translation": "src/locale/messages.pt.xlf",
            "baseHref": "pt"
          },
          "ru": {
            "translation": "src/locale/messages.ru.xlf",
            "baseHref": "ru"
          },
          "sr-RS": {
            "translation": "src/locale/messages.sr_RS.xlf",
            "baseHref": "sr-RS"
          },
          "sv-SE": {
            "translation": "src/locale/messages.sv_SE.xlf",
            "baseHref": "sv-SE"
          },
          "zh-CN": {
            "translation": "src/locale/messages.zh_CN.xlf",
            "baseHref": "zh-CN"
          },
          "zh-TW": {
            "translation": "src/locale/messages.zh_TW.xlf",
            "baseHref": "zh-TW"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/ngclient",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "polyfills": ["@angular/localize/init"],
            "assets": [
              "src/assets",
              {
                "glob": "messages.{en_US,en_GB,cs,da,de,es,fi,fr,hu,it,ja_JP,nl_NL,pl,pt_BR,pt,ru,sr_RS,sv_SE,zh_CN,zh_TW}.json",
                "input": "./src/locale",
                "output": "./locale/"
              },
              {
                "glob": "{en,en-gb,cs,da,de,es,fi,fr,hu,it,ja,nl,pl,pt,ru,sr,sv,zh-cn,zh-tw}.js",
                "input": "./node_modules/dayjs/esm/locale",
                "output": "./locale/dayjs/"
              },
              {
                "glob": "**/{en-US,en-GB,cs,da,de,es,fi,fr,hu,it,ja,nl,pl,pt-BR,pt,ru,sr,sv,zh-Hans,zh-Hant}.mjs",
                "input": "./node_modules/@angular/common/locales",
                "output": "./locale/angular/"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/@sparkle-ui/core/assets",
                "output": "./sparkle-ui-assets/"
              }
            ],
            "styles": ["src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ngclient:build:production"
            },
            "development": {
              "buildTarget": "ngclient:build:development",
              "proxyConfig": "src/proxy-localhost.conf.mjs"
            },
            "windows": {
              "buildTarget": "ngclient:build:development",
              "proxyConfig": "src/proxy-parallels.conf.mjs"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "ngclient:build",
            "format": "json",
            "outputPath": "src/locale"
          }
        }
      }
    }
  }
}
